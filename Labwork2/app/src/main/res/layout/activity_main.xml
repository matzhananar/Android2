<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Dark"
        >
<TextView
    android:id="@+id/text"
    android:layout_width="match_parent"
    android:layout_height="239dp"
    android:textColor="@color/White"
    />
    <Button
        android:id="@+id/clear"
        android:layout_below="@id/text"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="C"
        android:textSize="25sp"
        android:layout_marginStart="5dp"
        />

    <Button
        android:id="@+id/sqrt"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toEndOf="@id/clear"
        android:layout_below="@id/text"
            android:text=" √ "
        android:textSize="25sp"
        />
    <Button
        android:id="@+id/percentage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toEndOf="@id/sqrt"
        android:layout_below="@id/text"
        android:text="%"
        android:textSize="25sp"
        />
    <Button
        android:id="@+id/divide"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/Orange"
        android:layout_toEndOf="@id/percentage"
        android:layout_below="@id/text"
        android:text="÷"
        android:textSize="25dp"

        />


    <Button
        android:id="@+id/seven"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/clear"
        android:layout_marginStart="5dp"
        android:text="7"
        android:textSize="25sp"
        />

    <Button
        android:id="@+id/eight"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/sqrt"
        android:layout_toEndOf="@id/clear"
        android:text="8"
        android:textSize="25sp" />

    <Button
        android:id="@+id/nine"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/percentage"
        android:layout_toEndOf="@id/eight"
        android:text="9"
        android:textSize="25sp"

        />

    <Button
        android:id="@+id/multiply"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:backgroundTint="@color/Orange"
        android:layout_below="@id/divide"
        android:layout_toEndOf="@id/nine"
        android:text="x"
        android:textAllCaps="false"
        android:textSize="25sp"
        />
    <Button
        android:id="@+id/four"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/seven"
        android:layout_marginStart="5dp"
        android:text="4"
        android:textSize="25sp"
        />

    <Button
        android:id="@+id/five"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/eight"
        android:layout_toEndOf="@id/clear"
        android:text="5"
        android:textSize="25sp" />

    <Button
        android:id="@+id/six"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/nine"
        android:layout_toEndOf="@id/eight"
        android:text="6"
        android:textSize="25sp"

        />

    <Button
        android:id="@+id/minus"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:backgroundTint="@color/Orange"
        android:layout_below="@id/multiply"
        android:layout_toEndOf="@id/nine"
        android:text="—"
        android:textSize="25sp" />

    <Button
        android:id="@+id/one"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/four"
        android:layout_marginStart="5dp"
        android:text="1"
        android:textSize="25sp"
        />

    <Button
        android:id="@+id/two"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/five"
        android:layout_toEndOf="@id/clear"
        android:text="2"
        android:textSize="25sp" />

    <Button
        android:id="@+id/three"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/six"
        android:layout_toEndOf="@id/eight"
        android:text="3"
        android:textSize="25sp"

        />

    <Button
        android:id="@+id/plus"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:backgroundTint="@color/Orange"
        android:layout_below="@id/minus"
        android:layout_toEndOf="@id/nine"
        android:text="+"
        android:textSize="25sp" />


    <Button
        android:id="@+id/zero"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_below="@id/one"
        android:layout_marginStart="5dp"
        android:text="0"
        android:textSize="25sp"
        />

    <Button
        android:id="@+id/button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/three"
        android:layout_toEndOf="@id/zero"
        android:text="."
        android:textSize="25sp" />

    <Button
        android:id="@+id/equal"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:backgroundTint="@color/Orange"
        android:layout_below="@id/plus"
        android:layout_toEndOf="@id/button"
        android:text="="
        android:textSize="25sp"
        />

    </RelativeLayout>